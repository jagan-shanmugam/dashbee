# AI Provider Configuration
AI_GATEWAY_MODEL=anthropic/claude-haiku-4.5

# OpenAI Configuration (for custom API gateway)
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_VERSION=2024-10-21

# OpenRouter (alternative AI provider)
OPENROUTER_API_KEY=

# PostgreSQL Connection (USE READ-ONLY USER IN PRODUCTION)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/demo
DATABASE_SSL=false

# Supabase Connection (for landing page demo)
# Format: postgresql://user:password@host:port/database
SUPABASE_CONNECTION_STRING=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# MySQL Connection (optional)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=demo
MYSQL_USER=mysql
MYSQL_PASSWORD=mysql

# SQLite (optional)
SQLITE_PATH=./data/demo.db

# Security Settings
ALLOWED_SCHEMAS=public
ALLOWED_TABLES=
MAX_QUERY_ROWS=1000
QUERY_TIMEOUT_MS=5000

# Cloud Storage - S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Cloud Storage - GCS (optional)
GCS_PROJECT_ID=
GCS_KEY_FILE=

# Langfuse LLM Observability (optional)
# Sign up at https://langfuse.com to get credentials
# When configured, all LLM calls are traced with latency, token usage, and tool executions
# If not configured, the app works normally without tracing
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_BASE_URL=https://cloud.langfuse.com
